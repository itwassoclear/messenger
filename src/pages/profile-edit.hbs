{ label: 'Login', data: 'itwassoclear', field_name: 'login' },
{ label: 'First name', data: 'Maria', field_name: 'first_name' },
{ label: 'Last name', data: 'Kotliarova', field_name: 'second_name' },
{ label: 'Chat name', data: 'Maria', field_name: 'display_name' },
