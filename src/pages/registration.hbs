---
title: 'Messenger'
screen-name: Registration
fields: [
{ label: 'email', field_name: 'email', placeholder: 'Email', type: 'text', error_text: 'please use name@any.any' },
{ label: 'login', field_name: 'login', placeholder: 'Login', type: 'text', error_text: 'no' },
{ label: 'first name', field_name: 'first_name', placeholder: 'First name', type: 'text', error_text: 'no' },
{ label: 'second name', field_name: 'second_name', placeholder: 'Second name', type: 'text', error_text: 'no' },
{ label: 'phone', field_name: 'phone', placeholder: 'Phone', type: 'text', error_text: 'no' },
{ label: 'password', field_name: 'password', placeholder: 'Password', type: 'password', error_text: 'no' },
{ label: 'password', field_name: 'password', placeholder: 'Repeat password', type: 'password', error_text: 'passwords do
not match' },
]
button-text: 'Register'
link-text: 'Log in here'
---

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="./registration.js" type="module"></script>
  <title>{{ title }}</title>
</head>

<body>
  <main id="reg">
    <div class="login">

      <form class="fields">
        <h3 class="title">{{ screen-name }}</h3>

        {{#each fields as | item |}}
        <p class="label">{{ item.label }}</p>
        <input type="{{ item.type }}" name="{{ item.type }}" id="{{ item.type }}" placeholder="{{ item.placeholder }}">
        <p class="error">{{ item.error_text }}</p>
        {{/each }}

        <div class="buttons">{{>button name='Register'}}</div>
      </form>
      <p class="pre-link">Already with us? <a href="./authorization.hbs" class="link">{{ link-text }}</a></p>

    </div>
  </main>

</body>

</html>
