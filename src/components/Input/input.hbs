<div>
  <label class="label">{{ label }}</label>
  {{#if value}}
  <input type="{{ type }}" name="{{ name }}" id="{{ name }}" placeholder="{{ placeholder }}" value="{{ value }}"
    class="{{ className }}">
  {{else}}
  <input type="{{ type }}" name="{{ name }}" id="{{ name }}" placeholder="{{ placeholder }}" class="{{ className }}">
  {{/if}}

  <p class="error input-error">{{ error }}</p>
</div>
