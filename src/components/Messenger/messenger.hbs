<div class="chat">
  {{#if selectedChat}}
  <div class="chat-header">
    <div class="user">
      <div class="small-avatar"></div>
      <h3 class="user-name">{{ username }}</h3>
    </div>
    <button class="settings" data-type="settings">â‹®</button>
  </div>

  <div class="settings-popup">
    <div class="settings-popup-line">
      <img src="../../../static/icons/add.svg" alt="add">
      <p class="popup-text">Add user</p>
    </div>
    <div class="settings-popup-line">
      <img src="../../../static/icons/delete.svg" alt="delete">
      <p class="popup-text">Delete user</p>
    </div>
  </div>

  <div class="chat-feed">
    {{#each messages}}
    {{{this}}}
    {{/each}}
  </div>

  <div class="attach-popup">
    <div class="attach-popup-line">
      <img src="../../../static/icons/image.svg" alt="image">
      <p class="popup-text">Photo or video</p>
    </div>
    <div class="attach-popup-line">
      <img src="../../../static/icons/file.svg" alt="file">
      <p class="popup-text">File</p>
    </div>
    <div class="attach-popup-line">
      <img src="../../../static/icons/location.svg" alt="location">
      <p class="popup-text">Location</p>
    </div>
  </div>

  <div class="new-message">
    <button class="attach" data-type="attach"></button>
    {{{ input }}}
    {{{ sendButton }}}
  </div>
  {{else}}
  <div class="chat-plug">
    <p class="text">Select the chat to send a message</p>
  </div>
  {{/if}}
</div>
